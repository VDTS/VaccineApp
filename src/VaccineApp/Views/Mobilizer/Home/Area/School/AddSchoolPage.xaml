<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VaccineApp.Views.Mobilizer.Home.Area.School.AddSchoolPage"
             xmlns:ViewModel="clr-namespace:VaccineApp.ViewModels.Mobilizer.Home.Area.School"
             x:DataType="ViewModel:AddSchoolViewModel"
             Shell.TabBarIsVisible="False"
             Title="Add School">

    <StackLayout Padding="10"
                 Spacing="5"
                 HorizontalOptions="Center"
                 WidthRequest="{OnPlatform UWP='300', Default='300'}">

        <Entry Text="{Binding School.SchoolName, Mode=TwoWay}"
               Placeholder="School Name" />
        <Entry Text="{Binding School.KeyInfluencer, Mode=OneWayToSource}"
               Placeholder="School key influencer" />

        <StackLayout Orientation="Horizontal">
            <CheckBox IsChecked="{Binding IsLocationAvailable}" />
            <Label Text="Add Location" />
        </StackLayout>
        <Button Text="Save"
                TranslationY="50"
                WidthRequest="130"
                HeightRequest="50"
                HorizontalOptions="Center"
                Command="{Binding PostCommand}"
                Margin="20" />
    </StackLayout>
</ContentPage>